# ~/.bash_profile: executed by the command interpreter for login shells.
# Last Updated: 2015-01-21 11:46:22 JST

#==============================================================================
# Umask
#==============================================================================
umask 0027


#==============================================================================
# ~/.profile
#==============================================================================
if [[ -f ~/.profile ]];then
    . ~/.profile
fi


#==============================================================================
# ~/.bashrc
#==============================================================================
if [[ -n $BASH_VERSION ]];then
    export SHELL=/bin/bash
    if [[ -f ~/.bashrc ]];then
        . ~/.bashrc
    fi
fi

